<link rel="stylesheet" type="text/css" href="/styles.css"/>
<%- include header.ejs %>

<div class="container col-sm-12" id="mainform">
    <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                                                   
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Edit Movie</div>
                    <!-- <div style="float:right; font-size: 85%; position: relative; top:-10px"><a href="/home/movies">Movies</a></div> -->
                </div> 
                <div class="panel-body" >
                    <form class="form-horizontal" role="form" method="post" action="/home/edit/<%=data[0].id%>" onSubmit="return checkblank(this);">
                        <div id="signupalert" style="display:none" class="alert alert-danger">
                            <p>Error:</p>
                            <span></span>
                        </div>
                            
                        <div class="form-group">
                            <label for="movie_name" class="col-md-3 control-label">Title</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="movie_name" value="<%=data[0].movie_name%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="movie_genre" class="col-md-3 control-label">Genre</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="movie_genre" value="<%=data[0].movie_genre%>">
                            </div>
                        </div>
                                                                                        <div class="form-group">
                            <label for="movie_director" class="col-md-3 control-label">Director</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="movie_director" value="<%=data[0].movie_director%>">
                            </div>
                        </div>
                                                                                        <div class="form-group">
                            <label for="movie_language" class="col-md-3 control-label">Language</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="movie_language" value="<%=data[0].movie_language%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="movie_year" class="col-md-3 control-label">Year</label>
                            <div class="col-md-9">
                                <input type="number" class="form-control" name="movie_year" value="<%=data[0].movie_year%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="movie_desc" class="col-md-3 control-label">Description</label>
                            <div class="col-md-9">
                                <textarea name="movie_desc" required cols="30" rows="5"><%=data[0].movie_desc%></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <!-- Button -->                                       
                            <div class="col-md-offset-3 col-md-9">
                                <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Edit Movie</button>
                                
                            </div>
                        </div>
                       
                        
                        
                        
                    </form>
                 </div>
            </div>
      
        
 </div>
</div>
        
<%- include footer.ejs %>



